    {
      "name": "3. Order Service - Success Path",
      "item": [
        {
          "name": "5. Order - Create Order (Success Path)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"CUST-001\",\n  \"shippingAddress\": \"Av. Universitaria 123, Sangolquí, Ecuador\",\n  \"paymentReference\": \"PAY-12345\",\n  \"items\": [\n    {\n      \"productId\": \"P-001\",\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{order_service_url}}/api/v1/orders",
              "host": ["{{order_service_url}}"],
              "path": ["api", "v1", "orders"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar orderId en variable de entorno",
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set(\"order_id\", response.orderId);",
                  "    console.log(\"✅ Order ID guardado: \" + response.orderId);",
                  "}",
                  "",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Order status is PENDING\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql(\"PENDING\");",
                  "});",
                  "",
                  "pm.test(\"Order has ID\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('orderId');",
                  "});",
                  "",
                  "console.log(\"⏱️ Espera 5 segundos antes de consultar el estado de la orden\");"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "6. Order - Get Order by ID (CONFIRMED)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{order_service_url}}/api/v1/orders/{{order_id}}",
              "host": ["{{order_service_url}}"],
              "path": ["api", "v1", "orders", "{{order_id}}"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Order status is CONFIRMED\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql(\"CONFIRMED\");",
                  "});",
                  "",
                  "pm.test(\"UpdatedAt is after CreatedAt\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    const created = new Date(jsonData.createdAt);",
                  "    const updated = new Date(jsonData.updatedAt);",
                  "    pm.expect(updated.getTime()).to.be.greaterThan(created.getTime());",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "10. Order - Create Multi-Product Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
