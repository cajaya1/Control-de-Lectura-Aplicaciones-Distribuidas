              "raw": "{\n  \"customerId\": \"CUST-003\",\n  \"shippingAddress\": \"Av. Los Shyris 234, Quito, Ecuador\",\n  \"paymentReference\": \"PAY-MULTI-001\",\n  \"items\": [\n    {\n      \"productId\": \"P-001\",\n      \"quantity\": 1\n    },\n    {\n      \"productId\": \"P-002\",\n      \"quantity\": 3\n    },\n    {\n      \"productId\": \"P-003\",\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{order_service_url}}/api/v1/orders",
              "host": ["{{order_service_url}}"],
              "path": ["api", "v1", "orders"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set(\"order_id_multi\", response.orderId);",
                  "}",
                  "",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Order has multiple items\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.items.length).to.be.above(1);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
